{
  "name": "@mobius-software-ltd/nodejs-dtls",
  "version": "0.5.0",
  "description": "Secure UDP communications using DTLS.",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run lint && npm run unit-test",
    "lint": "npx eslint --quiet .",
    "unit-test": "npx jest",
    "start": "DEBUG=dtls,dtls:* DEBUG_DEPTH=10 node example.js",
    "openssl-server": "openssl s_server -cert fixtures/cert.pem -key fixtures/key.pem -dtls1_2 -accept 4444 -msg -mtu 1200 -state -nbio -debug",
    "gnutls-server": "cd $PWD/fixtures && GNUTLS_DEBUG_LEVEL=100 ./dtls"
  },
  "keywords": [
    "dtls", 
    "iot",
    "iotbroker"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mobius-software-ltd/nodejs-dtls.git"
  },
  "author": "Dmitriy Tsvettsikh <me@reklatsmasters.com>, Mobius Software Ltd <websupport@mobius-software.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mobius-software-ltd/nodejs-dtls/issues"
  },
  "homepage": "https://github.com/mobius-software-ltd/nodejs-dtls",
  "engines": {
    "node": ">=8.3"
  },
  "files": [
    "src"
  ],
  "dependencies": {
    "@fidm/asn1": "^1.0.3",
    "@fidm/x509": "^1.2.0",
    "binary-data": "^0.5.0",
    "bl": "^2.1.2",
    "debug": "^4.1.0",
    "is-dtls": "^2.0.0",
    "is-stream": "^1.1.0",
    "readable-stream": "^3.0.6",
    "sorted-array-functions": "^1.2.0",
    "streamfilter": "^3.0.0",
    "unicast": "^1.2.0"
  },
  "devDependencies": {
    "@nodertc/eslint-config": "^0.2.1",
    "eslint": "^5.9.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>",
      "<rootDir>/src",
      "<rootDir>/src/node_modules"
    ],
    "testMatch": [
      "**/test/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "**/src/*.js",
      "**/src/node_modules/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest-cache",
    "haste": {
      "providesModuleNodeModules": [
        "cipher",
        "filter",
        "fsm",
        "lib",
        "session",
        "utils"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@nodertc",
    "rules": {
      "no-underscore-dangle": "off"
    },
    "overrides": [
      {
        "files": [
          "test/**/*.js"
        ],
        "env": {
          "jest": true
        },
        "settings": {
          "import/resolver": {
            "node": {
              "moduleDirectory": [
                "node_modules",
                "src",
                "src/node_modules"
              ]
            }
          }
        },
        "rules": {
          "require-jsdoc": "off"
        }
      },
      {
        "files": [
          "example.js"
        ],
        "rules": {
          "no-console": "off",
          "security/detect-non-literal-fs-filename": "off"
        }
      }
    ]
  }
}
